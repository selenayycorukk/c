#include <stdio.h>
#include <stdlib.h>

int main()
{
    FILE *dosya;
    char cumle[30];
    int N,i;

    dosya=fopen("bilgi.txt","w");

    if(dosya==NULL)
    {
        printf("Dosya olusturamadi.");
    }
    else
    {
        printf("Lutfen bir cumle giriniz \n");
        gets(cumle);
        printf("Kac satir yazilacak?\n");
        scanf("%d",&N);
        for(i=1;i<=N;i++)
        {
            fprintf(dosya,"Satir no: %d Cumle: %s \n",i,cumle);

        }
        fclose(dosya);
        printf("Bilgiler dosyaya yazildi.");
    }


    return 0;
}
